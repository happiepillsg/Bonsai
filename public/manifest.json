{
  "manifest_version": 3,
  "name": "Bonsai Dashboard",
  "version": "1.0.1",
  "description": "A beautiful dashboard for your new tabs with quick access to bookmarks and tools",
  "chrome_url_overrides": {
    "newtab": "src/popup.html"
  },
  "permissions": [
    "bookmarks",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 